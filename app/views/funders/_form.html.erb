<%= simple_form_for(@funder) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :identifier %>
    <%= f.input :identifier_scheme %>
    <%= f.input :grant %>
    <%= f.input :dataset_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
