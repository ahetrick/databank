<p id="notice"><%= notice %></p>

<h1>Listing Funders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Identifier</th>
      <th>Identifier scheme</th>
      <th>Grant</th>
      <th>Dataset</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funders.each do |funder| %>
      <tr>
        <td><%= funder.name %></td>
        <td><%= funder.identifier %></td>
        <td><%= funder.identifier_scheme %></td>
        <td><%= funder.grant %></td>
        <td><%= funder.dataset_id %></td>
        <td><%= link_to 'Show', funder %></td>
        <td><%= link_to 'Edit', edit_funder_path(funder) %></td>
        <td><%= link_to 'Destroy', funder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

