= form_tag '/auth/identity/callback' do

  .form-group.row
    .col-md-2.col-md-offset-3
      %label.control-label{for: :auth_key}
        Email
    .col-md-4
      =text_field_tag :auth_key, nil, class: 'form-control'

  .form-group.row
    .col-md-2.col-md-offset-3
      %label.control-label{for: :password}
        Password
    .col-md-4
      =text_field_tag :password, nil, class: 'form-control'

  .row
    .col-md-2.col-md-offset-7.actions
      %button(type="submit" class="btn btn-primary btn-block")
        Log In