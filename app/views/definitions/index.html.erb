<p id="notice"><%= notice %></p>

<h1>Definitions</h1>

<table class="table" id="definitions-table">
  <thead>
    <tr>
      <th>Term</th>
      <th>Meaning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @definitions.each do |definition| %>
      <% if (can? :manage, definition)%>
        <tr>
          <td><%= definition.term %></td>
          <td><%= definition.meaning %></td>
          <td><%= link_to 'View', definition_path(definition.term) %></td>
          <td><%= link_to 'Edit', edit_definition_path(definition.term) %></td>
          <td><%= link_to 'Delete', definition_path(definition.term), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Definition', new_definition_path %>
