%h1 Listing user_abilities

%table
  %thead
    %tr
      %th Dataset
      %th User name
      %th User email
      %th Ability
      %th
      %th
      %th

  %tbody
    - @user_abilities.each do |user_ability|
      %tr
        %td= user_ability.dataset_id
        %td= user_ability.user_name
        %td= user_ability.user_email
        %td= user_ability.ability
        %td= link_to 'Show', user_ability
        %td= link_to 'Edit', edit_user_ability_path(user_ability)
        %td= link_to 'Destroy', user_ability, method: :delete, data: { confirm: 'Are you sure?' }

