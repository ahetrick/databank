.nested-fields
  .form-group
    .row
      %span(class="col-md-3" )
        = f.file_field :attachment
      %span(class="col-md-1")
        = f.label :description, "Description"
      %span(class="col-md-6" )
        = f.text_field :description, class: "file-description-textfield"
      %span(class="col-md-1")
        = link_to_remove_association %Q[<button type="button" class="btn btn-danger btn-sm file-remove"><span class="glyphicon glyphicon-remove"> File</span></button>].html_safe, f