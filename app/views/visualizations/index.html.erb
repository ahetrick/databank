<p id="notice"><%= notice %></p>

<h1>Visualizations</h1>

<table>
  <thead>
    <tr>
      <th>Dataset key</th>
      <th>Datafile web</th>
      <th>Data</th>
      <th>Options</th>
      <th>Chart class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visualizations.each do |visualization| %>
      <tr>
        <td><%= visualization.dataset_key %></td>
        <td><%= visualization.datafile_web_id %></td>
        <td><%= visualization.data %></td>
        <td><%= visualization.options %></td>
        <td><%= visualization.chart_class %></td>
        <td><%= link_to 'Show', visualization %></td>
        <td><%= link_to 'Edit', edit_visualization_path(visualization) %></td>
        <td><%= link_to 'Destroy', visualization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Visualization', new_visualization_path %>
